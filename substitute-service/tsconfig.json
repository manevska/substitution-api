{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "rootDir": "../",
    "types": [
      "jest",
      "node"
    ],
    "outDir": ".tsbuild",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "noEmit": false,
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".tsbuild"
  ],
  "include": [
    "./../core/**/*",
    "./src/**/*"
  ]
}
